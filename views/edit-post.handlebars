<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div class="form-group">
      <input class="form-control" name="post-title" type="text" value="{{post.title}}" />
      <textarea class="form-control" name="post-text" type="text">{{post.post_text}}</textarea>
    </div>
    <div class="form-group">
      Posted by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn">Save post</button>
    <button type="button" class="btn" id="delete-post-btn">Delete post</button>
    <p></p>
  </form>
</article>
<form>
  <div class="form-group">
    <textarea class="form-control" name="comment-body"></textarea>
  </div>

  <div>
    <button class="btn" type="submit">add comment</button>
  </div>
</form>
{{> comments post.comments}}
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>